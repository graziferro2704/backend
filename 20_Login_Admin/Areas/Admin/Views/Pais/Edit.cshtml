@model App.Models.Pais

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Pais</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPaises" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capital" class="control-label"></label>
                <input asp-for="Capital" class="form-control" />
                <span asp-validation-for="Capital" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Populacao" class="control-label"></label>
                <input asp-for="Populacao" class="form-control" />
                <span asp-validation-for="Populacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="continenteID" class="control-label"></label>
                <select asp-for="continenteID" class="form-control" asp-items="ViewBag.continenteID"></select>
                <span asp-validation-for="continenteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

